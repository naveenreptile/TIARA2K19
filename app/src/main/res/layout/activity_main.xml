<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/icon"
        android:layout_above="@id/event_but"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/schedule_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCHEDULE"
        android:layout_marginLeft="200dp"
        android:background="@drawable/outlinebutton"
        android:layout_marginBottom="25dp"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/event_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVENTS"
        android:textColor="@android:color/holo_red_dark"

        android:background="@drawable/outlinebutton"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"
        android:textSize="30sp"
        android:layout_above="@id/schedule_but"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/FAQ_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textColor="@android:color/holo_red_dark"

        android:background="@drawable/outlinebutton"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="25dp"
        android:textSize="30sp"
        android:layout_below="@id/schedule_but"
        android:layout_centerInParent="true"/>

</RelativeLayout>